{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "SnowdropContext": "Server={server};Database=SnowdropDb;User ID={username};Password={password}"
  },
  "JwtConfig": {
    "Secret": "ThisIsLongSecretLine",
    "Issuer": "https://localhost:5001",
    "Audience": "https//localhost:5001",
    "AccessTokenExpirationMs": 1200000,
    "RefreshTokenExpirationMs": 600000
  },
  "Redis": {
    "Password": "{password}",
    "AllowAdmin": true,
    "Ssl": true,
    "ConnectTimeout": 6000,
    "ConnectRetry": 2,
    "Database": 0,
    "Hosts": [
      {
        "Host": "{host}",
        "Port": "6380"
      }
    ]
  }
}

